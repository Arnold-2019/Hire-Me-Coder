extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Add User

        // register form
        form(method='POST' action='/users/add-users')
            div.form-group
                label(for='firstName') First Name:
                input#name.form-control(type='text', name='firstName')
            div.form-group
                label(for='lastName') Last Name:
                input#name.form-control(type='text', name='lastName')
            div.form-group
                label(for='email') Email:
                input#email.form-control(type='text', name='email')
            button.btn.btn-primary(type='submit') Submit