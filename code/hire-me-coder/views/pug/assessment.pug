extends layouts/_layout.pug

block variables
	- var activePage = 'send-assessment'

block title
	title Send Assessment Page - Maptek

block content
	.app-title
		div
			h1
				i.fa.fa-dashboard
				|  Assessment
			p Assessment management

		ul.app-breadcrumb.breadcrumb
			li.breadcrumb-item
				i.fa.fa-home.fa-lg
			li.breadcrumb-item
				a(href='#') Send assessment form

	.row
		.col-md-12
			.tile
				.row
					.col-lg-6
						//- form(method='POST' action='/assessment/send-assessment')
						form(id='sendAssessmentForm')
							.tile-body
								.form-group
									label.control-label Enter Email Addresses:
									input#emailInput.form-control(data-role="multiemail" required)
									//- input.form-control(id='inputEmailBox', name='inputEmailBox', type='text', placeholder='Separate multiple addresses by comma \' , \'' required)

								.form-group
									label.control-label Select Test:
									select#testSelect.form-control
										option.selected -- Select --
										//- <option selected>-- Select --</option>
									//- input.form-control(id='inputAssBox', name='inputAssBox', type='text', placeholder='Input the NAME of test form')
								
								.form-group
									label.control-label Select Expiration Date:
									.form-group
										.input-group
											input.form-control(id='inputDateBox',type='text', placeholder='Select Date' required)
											.input-group-append
												span.input-group-text
													i.fa.fa-calendar
								.form-group
									label.control-label Select Expiration Time:
									.form-group
										.input-group
											input.form-control(id='inputTimeBox',type='text', placeholder='Select Time' required)
											.input-group-append
												span.input-group-text
													i.fa.fa-clock-o
							.tile-footer
								button.btn.btn-info(id='previewButton', type='button' style='margin-right:5px' onclick='displayEmail()')
									| Email Preview
								button.btn.btn-secondary(id='resetInputsButton', type='button' style='margin-right:5px' onclick='this.form.reset();')
									| Reset	
							
					.col-lg-6
						form
							.tile-body
								.form-group
									label.control-label Preview Email Message:
									textarea#emailMessage.form-control(rows='16', disabled=true)
							.tile-footer
								button.btn.btn-primary(id='sendAssessmentButton', type='button' style='margin-right:5px' onclick='sendEmail()')
									i.fa.fa-fw.fa-lg.fa-check-circle
									| Send Assessment
								button.btn.btn-secondary(id='resetDisplayButton', type='button' style='margin-right:5px' onclick='this.form.reset();')
									| Reset			

block specific-js
	script(type='text/javascript', src='/js/plugins/bootstrap-datepicker.min.js')
	script(type='text/javascript', src='/js/plugins/select2.min.js')
	script(type='text/javascript', src='/js/plugins/bootstrap-datepicker.min.js')
	script(type='text/javascript', src='/js/plugins/bootstrap-multiEmail.js')
	script(type='text/javascript', src="/js/plugins/sweetalert.min.js")
	script(src='/javascripts/assessment.js')

