doctype html
html
	head
		include includes/_head.pug
		include includes/_javascript.pug
		script(type='text/javascript', src='/js/plugins/bootstrap-notify.min.js')
		script(src='/javascripts/login.js')
		title Login - MapTek - Hire Me Coder

	body
		section.material-half-bg
			.cover

		section.login-content
			.logo: h1 Maptek - Hire Me Coder

			.login-box
				form.login-form(id='loginForm')
					h3.login-head
						i.fa.fa-lg.fa-fw.fa-user
						| SIGN IN
					.form-group
						label.control-label USERNAME
						input#email.form-control(type="text", placeholder="Email", autofocus)

					.form-group
						label.control-label PASSWORD
						input#password.form-control(type="password", placeholder="Password")

					.form-group
						.utility
							//- .animated-checkbox
								label
									input(type="checkbox")
									span.label-text Stay Signed in
							p.semibold-text.mb-2
								a(href="#" data-toggle="flip") Forgot Password ?

					.form-group.btn-container
						button.btn.btn-primary.btn-block(type='button' onclick='login()')
							i.fa.fa-sign-in.fa-lg.fa-fw
							| SIGN IN

				form.forget-form
					h3.login-head
						i.fa.fa-lg.fa-fw.fa-lock
						| Forgot Password ?
					.form-group
						label.control-label EMAIL
						input#emailForReset.form-control(type="email", placeholder="Email")

					.form-group.btn-container
						button.btn.btn-primary.btn-block(type='button' onclick='resetPassword()')
							i.fa.fa-unlock.fa-lg.fa-fw
							| RESET

					.form-group.mt-3
						p.semibold-text.mb-0
							a(href="#" data-toggle="flip") <i class="fa fa-angle-left fa-fw"></i> Back to Login


		script(type="text/javascript").
			// Login Page Flipbox control
			$('.login-content [data-toggle="flip"]').click(function() {
				$('.login-box').toggleClass('flipped');
				return false;
			});